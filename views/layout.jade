!!!
html(lang="en", ng-app="myApp")
	head
		meta(charset="utf-8")
		base(href='/')
		link(rel="stylesheet", type="text/css", href="css/lib/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="css/lib/bootstrap-responsive.min.css")
		link(rel="stylesheet", type="text/css", href="css/app.css")
		link(href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700', rel='stylesheet', type='text/css')
		title Action Steps

		script(src='js/lib/jquery.min.js')
		script(src='js/lib/jquery-ui.min.js')
		script(src='js/lib/angular.min.js')
		script(src='js/lib/angular-dragdrop.js')
		script(src='js/lib/bootstrap.min.js')
		script(src='js/lib/jquery.knob.js')
		script
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-43303120-1', 'getactionsteps.com');
			ga('send', 'pageview');

			
		
	
	body(ng-controller="AppCtrl")
		div(class="navbar navbar-fixed-top")
			div(class="navbar-inner")
				div(class="container")
					a(class="brand", href="#") 
							img(src="../../img/actionstepsname.png")
					form(ng-submit="createProject()")
						ul(class="nav")
							li
								input(type="text", ng-model="projectInput", class="projectInput", placeholder="Create a new project.")
							li
								input(type="submit", class="btn btn-primary", value="+", id="addButton")
							li
								div(class="alert alert-{{alert.type}}", ng-repeat="alert in alerts", type="alert.type") {{alert.msg}}
									a(class="close", data-dismiss="alert", href="#", ng-click="closeAlert($index)") &times;


						ul(class="nav pull-right")
							li
								a(href="#") Hello, {{person.first_name}}
							li 
								a(href="#", ng-click="logout()") Logout
						
		block body
